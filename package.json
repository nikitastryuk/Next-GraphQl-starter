{
  "name": "nextjs-starter",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "typecheck": "tsc --project tsconfig.json --pretty --noEmit",
    "lint": "eslint . --ext .ts,.tsx --cache --cache-location=node_modules/.cache/.eslintcache --fix",
    "generate:nexus": "ts-node --transpile-only src/graphql/schema.ts",
    "generate:prisma": "prisma generate"
  },
  "dependencies": {
    "@prisma/client": "3.8.1",
    "apollo-server-micro": "^3.6.1",
    "graphql": "^15.6.0",
    "micro-cors": "^0.1.1",
    "next": "12.0.8",
    "nexus": "^1.1.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "urql": "^2.0.6"
  },
  "devDependencies": {
    "@types/faker": "5.5.3",
    "@types/micro-cors": "^0.1.2",
    "@types/node": "17.0.8",
    "@types/react": "17.0.38",
    "eslint": "8.7.0",
    "eslint-config-next": "12.0.8",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "husky": "7.0.4",
    "lint-staged": "12.1.7",
    "prettier": "2.5.1",
    "prisma": "3.8.1",
    "simple-git-hooks": "2.7.0",
    "ts-node": "10.4.0",
    "typescript": "4.5.4"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "prisma": {
    "seed": "ts-node ./src/prisma/seed.ts",
    "schema": "src/prisma/schema.prisma"
  }
}
